[user]
    name = Hiroshi Muraoka
    email = h.muraoka714@gmail.com

[alias]
    amend = commit --amend
    b = branch --sort=committerdate --format='%(color:green)[%(committerdate:short)]%(color:reset) %(refname:short) %(color:yellow)%(authorname)%(color:reset)' --color
    br = branch -r --sort=committerdate --format='%(color:green)[%(committerdate:short)]%(color:reset) %(refname:short) %(color:yellow)%(authorname)%(color:reset)' --color
    cb = checkout -b
    ci = commit
    cm = commit -m
    co = checkout
    cs = commit -sm
    d = diff
    ds = diff --staged
    edit = !nvim ~/.gitconfig
    f = fetch origin
    fd = !fd
    g = !git grep -n
    gc = "!git branch --merged | grep  -v '\\*\\|main\\|master\\|develop' | xargs -n 1 -r git branch -d"
    gg = grep -n
    h = show
    hard = reset --hard
    l = log --oneline --pretty=format:'%h [%cd] %d %s <%an>' --date=format:'%Y/%m/%d %H:%M:%S'
    ls = ls-files
    mo = !git pull origin $(git symbolic-ref refs/remotes/origin/HEAD | awk -F'[/]' '{print $NF}')
    o = open
    op = stash pop
    ours = checkout --ours
    pi = pull
    pk = chery-pick
    po = push
    pr = !git push && gh pr create --web
    s = status -s
    ss = status
    theirs = checkout --theirs
    ts = stash
    u = add -u
[alias]

[init]
    defaultBranch = main

[core]
    editor = nvim
    autocrlf= false
    pager = delta -s

[delta]
    syntax-theme = Monokai Extended
    features = line-numbers decorations

[pull]
    ff = only

[push]
    default = current

[include]
    path = ~/.gitconfig.local

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    ff = false

[ghq]
    root=~/.ghq
    root=~/dart/src
    root=~/python/src
    root=~/go/src
    root=~/src

