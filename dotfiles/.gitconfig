[user]
    name = Hiroshi Muraoka
    email = h.muraoka714@gmail.com

[alias]
    amend = commit --amend
    b = !git branch -a | fzf | xargs git checkout
    c = clone --recursive
    cb = checkout -b
    ci = commit
    cm = commit -m
    co = checkout
    cs = commit -sm
    d = diff
    dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
    ds = diff --staged
    edit = !nvim ~/.gitconfig
    f = fetch origin
    fd = !fd
    g = !git grep -n
    gg = grep -n
    h = show
    hard = reset --hard
    l = log --graph --decorate --abbrev-commit --pretty=log
    o = open
    op = stash pop
    ours = checkout --ours
    pf = push --force-with-lease
    pi = pull
    pk = chery-pick
    po = push
    pr = !git push && gh pr create --web
    s = status -s
    ss = status
    theirs = checkout --theirs
    ts = stash
    u = add -u

[init]
    defaultBranch = main

[core]
    editor = nvim
    autocrlf= false
    pager = delta -s

[delta]
    syntax-theme = Monokai Extended
    features = line-numbers decorations

[pull]
    ff = only

[push]
    default = current

[include]
    path = ~/.gitconfig.local

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    ff = false

[ghq]
    root=~/.ghq
    root=~/dart/src
    root=~/python/src
    root=~/go/src
    root=~/src

[pretty]
    log = "format:%C(blue)%h%C(reset) - %C(green)(%ar)%C(reset)%C(yellow)%d%C(reset)  %C(white)%s%C(reset) %C(dim white)- %an%C(reset)"
