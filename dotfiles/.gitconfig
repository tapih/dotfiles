[user]
    name = Hiroshi Muraoka
    email = h.muraoka714@gmail.com

[alias]
    amend = commit --amend
    b = !git branch -a | fzf | xargs git checkout
    ci = commit
    cm = commit -m
    co = checkout
    cs = commit -sm
    d = diff
    ds = diff --staged
    edit = !nvim ~/.gitconfig
    f = fetch origin
    fd = !fd
    g = !git grep -n
    gg = grep -n
    h = show
    hard = reset --hard
    l = log --graph --decorate --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    o = open
    op = stash pop
    pf = push --force-with-lease
    pi = pull
    pk = chery-pick
    po = push
    pr = !git push && gh pr create --web
    s = status -s
    ss = status
    ts = stash
    u = add -u
    w = switch
    c = switch -c

    cl = checkout HEAD
    ours = checkout --ours
    theirs = checkout --theirs

    main-branch = !gh repo view --json defaultBranchRef --jq .defaultBranchRef.name
    remotesh = remote set-head origin --auto
    m = "!f(){ git checkout $(git main-branch) $@;}; f"
    mr = "!f(){ git pull --rebase --autostash origin $(git main-branch) $@;}; f"
    cl = "!f(){ B=$(git main-branch); git branch --format='%(refname:short)' --merged=${B} | grep -v \"^${B}$\" | xargs -n 1 git branch -D; }; f"

[init]
    defaultBranch = main

[core]
    editor = nvim
    autocrlf= false
    pager = delta -s

[delta]
    syntax-theme = Monokai Extended
    features = line-numbers decorations

[pull]
    ff = only

[push]
    autoSetupRemote = true

[include]
    path = ~/.gitconfig.local

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    ff = false

[ghq]
    root=~/.ghq
    root=~/dart/src
    root=~/python/src
    root=~/go/src
    root=~/src

[url "https://"]
    insteadOf = git://

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
